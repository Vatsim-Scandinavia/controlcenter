{
    "name": "vatsim-scandinavia/controlcenter",
    "type": "project",
    "description": "The training & booking management system for VATSIM entities.",
    "keywords": [
        "framework",
        "laravel"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.3.2",
        "anlutro/l4-settings": "^1.4.1",
        "graham-campbell/markdown": "^15.2",
        "guzzlehttp/guzzle": "^7.9.0",
        "hisorange/browser-detect": "^5.0",
        "laravel/framework": "^11.0",
        "laravel/tinker": "^2.9",
        "laravel/ui": "^4.5.2",
        "league/commonmark": "^2.4",
        "league/oauth2-client": "^2.7",
        "sentry/sentry-laravel": "^4.3",
        "spatie/laravel-ignition": "^2.0",
        "spatie/laravel-login-link": "^1.3"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar": "^3.13",
        "fakerphp/faker": "^1.23.0",
        "laravel/pint": "^1.7",
        "mockery/mockery": "^1.0",
        "nunomaduro/collision": "^8.1",
        "phpunit/phpunit": "^11"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "php-http/discovery": true
        }
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "App\\Helpers\\": "app/Helpers",
            "App\\Tasks\\Types\\": "app/Tasks/Types/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        },
        "files": [
            "app/Helpers/Vatsim.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ]
    }
}
